{
  "name": "nuxt-laravel",
  "version": "3.0.0",
  "description": "Nuxt cli extension for use with laravel as backend",
  "bin": "./bin/cli.js",
  "main": "./dist/cli.js",
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "npm run build",
    "build:clean": "npm run clean && npm run build",
    "clean": "rimraf dist .nuxt public storage",
    "lint": "tslint -p .",
    "lint:fix": "npm run lint -- --fix",
    "lint:check": "tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "validate": "npm run lint:check && npm run lint && npm test && jest-badges-readme",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m2sd/nuxt-laravel.git"
  },
  "keywords": [
    "laravel",
    "nuxt",
    "spa",
    "vue",
    "nuxt-cli",
    "cli"
  ],
  "author": "Michael Marcenich <info@m-squared-solutions.it> (https://m-squared-solutions.it)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m2sd/nuxt-laravel/issues"
  },
  "homepage": "https://github.com/m2sd/nuxt-laravel#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@nuxt/typescript": "^2.6.2",
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/proxy": "^1.3.3",
    "@olavoparno/jest-badges-readme": "^1.3.4",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/opener": "^1.4.0",
    "@types/tmp": "^0.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "nuxt": "^2.6.3",
    "rimraf": "^2.6.3",
    "standard-version": "^5.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "dotenv": "^7.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/proxy": "^1.3.3",
    "nuxt": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate && npm run build:clean && git add dist 'README.md'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
